<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AlgSortFragment">


    <TextView
        android:id="@+id/library_text"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/closeAlgSortButton"
        android:background="#26E0F8"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/AlgSort"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/closeAlgSortButton"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:contentDescription="@string/Mistake"
        android:src="?attr/actionModeCloseDrawable" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/library_text"
        android:layout_marginTop="16dp" />

</RelativeLayout>
